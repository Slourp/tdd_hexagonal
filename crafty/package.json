{
  "scripts": {
    "build": "tsc --noEmit src/server.ts && esbuild src/server.ts --outdir=dist --bundle --platform=node --format=cjs",
    "start:dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "post-message": "npm run build && node dist/server.js post"
  },
  "dependencies": {
    "@types/node": "^20.2.5",
    "commander": "^10.0.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "esbuild": "^0.17.19",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}